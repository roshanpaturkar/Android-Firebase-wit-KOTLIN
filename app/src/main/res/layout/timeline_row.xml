<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/userNamePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Roshan !"
            android:textAlignment="textEnd"
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/postCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Post Title Goes Here..."
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/postDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="The Post Description Goes Here..." />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/likeTextView"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

            <TextView
                android:id="@+id/dislikeTextView"
                android:layout_marginStart="6dp"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

            <TextView
                android:id="@+id/commentTextView"
                android:layout_marginStart="6dp"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:background="@android:color/holo_green_light"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/likeImageView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/white_like"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

            <ImageView
                android:id="@+id/dislikeImageView"
                android:layout_marginStart="6dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/whitedislike"
                android:padding="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

            <ImageView
                android:id="@+id/commentImageView"
                android:layout_marginStart="6dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/white_comment"
                android:padding="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>