<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/votingImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <!--<TextView-->
            <!--android:id="@+id/votingName"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="15dp"-->
            <!--android:text="Roshan !"-->
            <!--android:textAlignment="textEnd"-->
            <!--android:textSize="16dp"-->
            <!--android:textStyle="bold|italic" />-->

        <TextView
            android:id="@+id/votingIssue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Post Title Goes Here..."
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/agreeTextView"
                android:layout_width="@dimen/nav_header_height"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/disagreeTextView"
                android:layout_width="@dimen/nav_header_height"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:background="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/votingAgree"
                android:layout_width="@dimen/nav_header_height"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/white_like"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <ImageView
                android:id="@+id/votingDisagree"
                android:layout_marginStart="6dp"
                android:layout_width="@dimen/nav_header_height"
                android:src="@drawable/whitedislike"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>